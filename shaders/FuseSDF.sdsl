shader FuseSDF
{
    float fSphere(float3 p, float r) 
    {
        return length(p) - r;
    }

    // Cylinder standing upright on the xz plane
    float fCylinder(float3 p, float r, float height) 
    {
        float d = length(p.xz) - r;
        d = max(d, abs(p.y) - height);
        return d;
    }

};